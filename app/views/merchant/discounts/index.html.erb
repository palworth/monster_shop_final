<% @discounts.each do |discount| %>
<% if current_user.merchant.id == discount.merchant.id || current_admin? %>
<h2><%= link_to discount.title, "/merchant/discounts/#{discount.id}" %></h2>
<p>Information: <%= discount.information %></p>
<p>Percent off: <%= discount.percent_off %></p>
<p>Amount of products needed to get discount: <%= discount.discount_range %></p>
<%  end %>
<%  end %>
