<%= form_tag "/merchant/discounts", method: :post do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>

  <%= label_tag :information %>
  <%= text_field_tag :information %>

  <%= label_tag :lowest_amount %>
  <%= text_field_tag :lowest_amount %>

  <%= label_tag :highest_amount %>
  <%= text_field_tag :highest_amount %>

  <%= label_tag :percent_off %>
  <%= text_field_tag :percent_off %>

  <%= submit_tag "Submit" %>
<% end %>
